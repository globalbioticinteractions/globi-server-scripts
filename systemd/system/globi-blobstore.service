[Unit]
Description=GloBI Blobstore
After=network-online.target
Wants=network-online.target

[Service]
EnvironmentFile=/etc/globi/globi.conf
ExecStart=/usr/local/bin/minio server --address localhost:9000 --console-address localhost:9001 /var/cache/minio
Restart=always
User=minio

[Install]
WantedBy=multi-user.target
